{
    "files.exclude": {
        "**/node_modules": true,
        "**/build": true,
        "**/dist": true,
        "**/target": true,
        "**/.github": true,
        "**/.git": true
    },
    "search.exclude": {
        "**/*-lock.json": true,
        "**/*.lock": true,
        "**/.gitignore": true,
        "**/.gitmodules": true
    },
    "typescript.validate.enable": true,
    "editor.detectIndentation": false,
    "editor.formatOnPaste": true,
    "editor.insertSpaces": true,
    "editor.wordWrap": "off",
    "editor.tabSize": 4,
}